<UserControl x:Class="POS.Views.UserControls.WarehouseFunctions.AddEditDeleteIngredientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:warehouseFunctions="clr-namespace:POS.ViewModels.WarehouseFunctions"
             d:DataContext="{d:DesignInstance Type=warehouseFunctions:AddEditDeleteIngredientViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="456">

    <Grid Margin="25" Background="#FFD9D9D9">
        <Grid.RowDefinitions>
            <RowDefinition Height="457*"/>
            <RowDefinition Height="186*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1" BorderBrush="Black" CornerRadius="8" d:IsLocked="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="Black" CornerRadius="8,8,0, 0" Background="#8EA7E9">
                    <Grid>
                        <TextBlock Text="DODAJ, EDYTUJ LUB USUŃ SKŁADNIK" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="16" />
                    </Grid>
                </Border>

                <Border Grid.Row="2" CornerRadius="8" Margin="25,0,25,0" Background="White">
                    <Grid>
                        <ComboBox x:Name="EditIngredient_ComboBox" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <ComboBoxItem IsSelected="True" IsEnabled="False">Wybierz składnik</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </Border>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="25,0,0,0">
                        <Viewbox Height="32" HorizontalAlignment="Left" >
                            <CheckBox x:Name="CreateNewIngredient_CheckBox"/>
                        </Viewbox>
                    </Grid>

                    <Border Grid.Column="1" CornerRadius="8" Margin="24,0,25,0" Background="White">
                        <Grid>
                            <TextBox Text="{Binding IngredientName, FallbackValue=''}" 
                                     Tag="Nazwa nowego składnika" 
                                     Style="{StaticResource WarehouseFunctionsTextBoxWithPlaceholder}"
                                     IsEnabled="True">
                            </TextBox>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="8" Margin="24,0,25,0" Background="White">
                        <Grid>
                            <TextBox Text="{Binding IngredientUnit, FallbackValue=''}" 
                                     Tag="Jednostka" 
                                     Style="{StaticResource WarehouseFunctionsTextBoxWithPlaceholder}"
                                     IsEnabled="True">
                            </TextBox>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="8" Margin="24,0,25,0" Background="White">
                        <Grid>
                            <TextBox Text="{Binding IngredientPackage, FallbackValue=''}" 
                                     Tag="Opakowanie" 
                                     Style="{StaticResource WarehouseFunctionsTextBoxWithPlaceholder}"
                                     IsEnabled="True">
                            </TextBox>
                        </Grid>
                    </Border>
                </Grid>

                <Border Grid.Row="8" CornerRadius="8" Margin="24,0,25,0" Background="White">
                    <Grid>
                        <TextBox Text="{Binding IngredientDescription, FallbackValue=''}" 
                                 Tag="Opis składnika" 
                                 Style="{StaticResource WarehouseFunctionsTextBoxWithPlaceholder2}"
                                 VerticalContentAlignment="Top"
                                 HorizontalContentAlignment="Left"
                                 Padding="10"
                                 IsEnabled="True">
                        </TextBox>
                    </Grid>
                </Border>

                <Grid Grid.Row="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="165*"/>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="165*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="DeleteIngredient_Button" Grid.Row="10" Grid.Column="1" Margin="0" Style="{StaticResource cancelButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="USUŃ" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="16"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SaveIngredient_Button" Grid.Row="10" Grid.Column="3" Margin="0" Style="{StaticResource payButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ZAPISZ" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="16"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
