<UserControl x:Class="POS.Views.UserControls.WarehouseFunctions.AddEditDeleteIngredientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:warehouseFunctions="clr-namespace:POS.ViewModels.WarehouseFunctions"
             d:DataContext="{d:DesignInstance Type=warehouseFunctions:AddEditDeleteIngredientViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="456">

    <Grid Margin="25" Background="#FFD9D9D9">
        <Grid.RowDefinitions>
            <RowDefinition Height="457*"/>
            <RowDefinition Height="186*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1" BorderBrush="Black" CornerRadius="8" d:IsLocked="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="Black" CornerRadius="8,8,0, 0" Background="#8EA7E9">
                    <Grid>
                        <TextBlock Text="DODAJ, EDYTUJ LUB USUŃ SKŁADNIK" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="16" />
                    </Grid>
                </Border>

                <Border Grid.Row="2" CornerRadius="8" Margin="25,0,25,0" Background="White">
                    <Grid>
                        <ComboBox ItemsSource="{Binding IngredientObservableCollection}"
                                  SelectedItem="{Binding SelectedIngredient}"
                                  DisplayMemberPath="Name"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center">
                        </ComboBox>
                        <TextBlock Text="Wybierz składnik"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding IsIngredientSelected}">
                        </TextBlock>
                    </Grid>
                </Border>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="25,0,0,0">
                        <Viewbox Height="32" HorizontalAlignment="Left" >
                            <CheckBox IsChecked="{Binding IsNewIngredient}"/>
                        </Viewbox>
                    </Grid>

                    <Border Grid.Column="1" CornerRadius="8" Margin="25,0,25,0" Background="White">
                        <Grid>
                            <TextBox Text="{Binding IngredientName, FallbackValue='', UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Nazwa nowego produktu" 
                                     Style="{StaticResource WarehouseFunctionsTextBoxWithPlaceholder}"
                                     IsEnabled="{Binding IsNewIngredient}">
                            </TextBox>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="8" Margin="25,0,12,0" Background="White">
                        <Grid>
                            <TextBox Text="{Binding IngredientUnit, FallbackValue='', UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Jednostka" 
                                     Style="{StaticResource WarehouseFunctionsTextBoxWithPlaceholder}">
                            </TextBox>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="8" Margin="25,0,25,0" Background="White">
                        <Grid>
                            <TextBox Text="{Binding IngredientPackage, FallbackValue='', UpdateSourceTrigger=PropertyChanged}" 
                                     Tag="Opakowanie" 
                                     Style="{StaticResource WarehouseFunctionsTextBoxWithPlaceholder}">
                            </TextBox>
                        </Grid>
                    </Border>
                </Grid>

                <Border Grid.Row="8" CornerRadius="8" Margin="25,0,25,0" Background="White">
                    <Grid>
                        <TextBox Text="{Binding IngredientDescription, FallbackValue='', UpdateSourceTrigger=PropertyChanged}" 
                                 Tag="Opis składnika" 
                                 Style="{StaticResource WarehouseFunctionsTextBoxWithPlaceholder2}"
                                 VerticalContentAlignment="Top"
                                 HorizontalContentAlignment="Left"
                                 Padding="10">
                        </TextBox>
                    </Grid>
                </Border>

                <Grid Grid.Row="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="165*"/>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="165*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>

                    <Button Command="{Binding DeleteIngredientCommand}"
                            IsEnabled="{Binding IsDeleteButtonEnable}"
                            Style="{StaticResource BasicButtonRed}"
                            Grid.Column="1"
                            Margin="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="USUŃ" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="16"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding AddNewIngredientCommand}"
                            IsEnabled="{Binding IsAddButtonEnable}"
                            Style="{StaticResource BasicButtonGreen}"
                            Grid.Column="3"
                            Margin="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="DODAJ" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="16"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
