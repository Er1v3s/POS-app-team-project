<Window x:Class="POS.Views.DiscountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS.Views"
        mc:Ignorable="d"
        Title="DiscountWindow" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <RadioButton Name="radioButton10" Content="Zniżka studencka - rabat 10%" />
            <RadioButton Name="radioButton15" Content="Zniżka lojalnościowa - rabat 15%" />
            <Button Content="Zastosuj Rabat" Click="ApplyDiscount_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
